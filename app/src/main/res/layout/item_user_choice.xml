<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="请您选择人员"
        android:textColor="@color/mid_gray" />

    <com.goodiebag.horizontalpicker.HorizontalPicker
        android:layout_marginTop="10dp"
        android:id="@+id/hpicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:textSize="14sp"
        app:itemMargin="20dp"
        app:itemHeight="60dp"
        app:itemWidth="60dp"
        app:backgroundSelector="@drawable/selector_background_example"
        app:textColorSelector="@drawable/selector_text_view"/>

</LinearLayout>