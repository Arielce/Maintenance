<ren.solid.library.widget.StatusViewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/status_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/pink"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_risk"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="【风险辨识与预控措施】"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/yalan_red"
                android:textSize="12sp" />
        </RelativeLayout>


        <ren.solid.library.widget.steppers.SteppersView
            android:id="@+id/steppersView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</ren.solid.library.widget.StatusViewLayout>